<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#2618A8"
                android:startColor="#4FDEE8"
                android:endColor="#FF5CE9"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="300dp"
                android:height="50dp"
                />
            <stroke
                android:width="3dp"
                android:color="#0E1E7D"
                />
        </shape>
    </item>
</selector>